<div id="header">
  <div class="row">
    <div class="small-12 large-6 columns header-right">
      <h1>Gifts</h1>
      <p>
        With your help, we are reaching out to our communities planting seeds of hope, change and opportunity.
      </p>
    </div>
    <div class="small-12 large-6 columns header-left">
      <div class="buffer5">&nbsp;</div>
      <%= image_tag "logo.png", :class => "logo" %>
    </div>
  </div>
</div>
<div class="row">
<% @gifts.each do |gift| %>
  <h1><%= link_to 'Edit', edit_gift_path(gift) %></h1>
   <%# link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %>
  <div class="small-12 columns"><%= markdown(gift.section) %></div>
  <div class="small-12 columns"><%= markdown(gift.sectionb) %></div>
  <div class="small-12 columns"><%= markdown(gift.sectionc) %></div>
  <div class="small-12 columns"><%= markdown(gift.sectiond) %></div>
<% end %>
</div>
<div class="row">
  <div class="small-12 columns">
    <h3><%= link_to 'New Gift', new_gift_path %></h3>
  </div>
</div>



