<div id="header">
  <div class="row">
    <div class="small-12 large-6 columns header-right">
      <h1>Programs</h1>
      <p>
        What we do at Plant a Seed is divided into three programs: education, clean water, and sports.
      </p>
    </div>
    <div class="small-12 large-6 columns header-left">
      <div class="buffer5">&nbsp;</div>
      <%= image_tag "logo.png", :class => "logo" %>
    </div>
  </div>
</div>
<div class="row">

  <div class="small-12 columns">
    <h1><%= link_to 'New Program', new_program_path %></h1>
  </div>

  <div class="small-8 columns">
    <% @programs.each do |program| %>
      <h1 class="hh1"><%= program.title %></h1>

      <h2>
        <%= link_to 'Edit', edit_program_path(program) %> - <%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %>
      </h2>

      <div><%= markdown(program.body) %></div>
    <% end %>
  </div>
  <div class="small-4 columns">
    <%= render "education" %>
  </div>
</div>
